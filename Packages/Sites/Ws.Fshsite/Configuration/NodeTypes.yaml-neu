##
# A "Registration" plugin that allows creation of Neos user accounts through the Frontend
# Warning: This is not to be used on productive Websites!
#
'Ws.Fshsite:Registration':
  superTypes:
    'TYPO3.Neos:Plugin': TRUE
  ui:
    label: i18n
    icon: 'icon-user'
    help:
      message: |
        A very simple registration to allow quick access to the backend of the demo site.

        **Note:** For security reasons you should disable this on live sites.

##
# A simple "Flickr" plugin that demonstrates the "PluginViews"-feature
#
#
'Ws.Fshsite:Flickr':
  superTypes:
    'TYPO3.Neos:Plugin': TRUE
  ui:
    label: i18n
    icon: 'icon-flickr'
    inspector:
      groups:
        'feed':
          label: 'Feed'
          icon: 'icon-rss'
    help:
      message: 'Displays a gallery of images from a flickr stream based on tags.'
  options:
    'pluginViews':
      'UserFeed':
        label: 'Ws.Fshsite:NodeTypes.Flickr:options.pluginViews.userFeed'
        controllerActions:
          'Neos\Demo\Controller\FlickrController': ['userStream']
  properties:
    'tags':
      type: string
      defaultValue: ''
      ui:
        label: i18n
        reloadIfChanged: TRUE
        inspector:
          group: 'feed'

##
# A "Youtube" content element
#
#
'Ws.Fshsite:YouTube':
  superTypes:
    'TYPO3.Neos:Content': TRUE
  ui:
    label: YouTube
    icon: 'icon-youtube'
    inspector:
      groups:
        'video':
          label: i18n
          icon: 'icon-film'
          position: 50
    help:
      message: 'Embeds a YouTube video as content defined by a video ID.'
  properties:
    'video':
      type: string
      defaultValue: ''
      ui:
        label: i18n
        reloadIfChanged: TRUE
        inspector:
          group: 'video'
        help:
          message: |
            The video identifier is visible in the URL to a youtube video

            Eg. in the URL

            `https://youtu.be/G6D1YI-41ao`

            the video id is `G6D1YI-41ao`.
    'width':
      type: integer
      defaultValue: 400
      ui:
        label: i18n
        reloadIfChanged: TRUE
        inspector:
          group: 'video'
    'height':
      type: integer
      defaultValue: 300
      ui:
        label: i18n
        reloadIfChanged: TRUE
        inspector:
          group: 'video'

##
# A "Carousel" content element that renders "Image" child nodes into a JavaScript based slideshow
#
#
'Ws.Fshsite:Carousel':
  superTypes:
    'TYPO3.Neos:Content': TRUE
  childNodes:
    'carouselItems':
      type: 'TYPO3.Neos:ContentCollection'
      constraints:
        nodeTypes:
          '*': FALSE
          'TYPO3.Neos.NodeTypes:Text': TRUE
          'TYPO3.Neos.NodeTypes:Image': TRUE
          'TYPO3.Neos.NodeTypes:TextWithImage': TRUE
  ui:
    label: Slider
    group: 'plugins'
    icon: 'icon-picture'
    inlineEditable: TRUE

    help:
      message: |
        Bootstrap carousel which can display the following types of content:
        * Headline
        * Text
        * TextWithImage
        * Image
        * HTML
        * YouTube
        * References
        
        
