##
# Allo Shortcut node to contain menu content, since they are also used at top level
#
'TYPO3.Neos:Shortcut':
  childNodes:
    'menu':
      type: 'TYPO3.Neos:ContentCollection'
    'topslider':
      type: 'TYPO3.Neos:ContentCollection'
      constraints:
        nodeTypes:
          '*': TRUE
  properties:
    'subpageLayout':
      type: string
      ui:
        label: 'Layout für Unterseiten dieser Seite'
        inspector:
          group: 'layout'
          position: 110
          editor: 'TYPO3.Neos/Inspector/Editors/SelectBoxEditor'
          editorOptions:
            placeholder: 'Vom Elternelement erben'
            values:
              'default':
                label: 'Standard'
              'sidebar':
                label: 'mit Sidebar'
  ui:
    inspector:
      groups:
        layout:
          label: Layout
          icon: 'icon-paint-brush'
          position: 150




