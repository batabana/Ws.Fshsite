##
# Adjust the "Text" node type:
# Enable 4th and 5th level and disable "p" in the aloha format selector of the "title" property
#
'TYPO3.Neos.NodeTypes:Text':
  properties:
    'text':
      ui:
        aloha:
          'format':
            'h4': TRUE
            'h5': TRUE
            'code': TRUE


##
# Adjust the "Image" node type:
# Disable resize property
#
'TYPO3.Neos.NodeTypes:Image':
  properties:
    'image':
      ui:
        inspector:
          editorOptions:
            features:
              resize: FALSE

##
# Adjust the "TwoColumn" node type:
# Disable some of the layout options, override labels and set the default layout
#
'TYPO3.Neos.NodeTypes:TwoColumn':
  properties:
    'layout':
      defaultValue: '4-8'
      ui:
        inspector:
          editorOptions:
            values:
              '50-50': ~
              '66-33': ~
              '33-66': ~
              '6-6':
                label: '50% / 50%'
              '8-4':
                label: '66% / 33%'
              '4-8':
                label: '33% / 66%'
    'screen':
      defaultValue: 'medium'
      type: string
      ui:
        label: 'Screen'
        inspector:
          group: 'column'
          editor: 'TYPO3.Neos/Inspector/Editors/SelectBoxEditor'
          editorOptions:
            values:
              'sm':
                label: 'Small'
              'md':
                label: 'Medium'
              'lg':
                label: 'Large'

##
# Adjust the "ThreeColumn" node type:
# Disable some of the layout options, override labels and set the default layout
#
'TYPO3.Neos.NodeTypes:ThreeColumn':
  properties:
    'layout':
      defaultValue: '4-4-4'
      ui:
        inspector:
          editorOptions:
            values:
              '33-33-33': ~
              '50-25-25': ~
              '25-50-25': ~
              '25-25-50': ~
              '4-4-4':
                label: '33% / 33% / 33%'
              '6-3-3':
                label: '50% / 25% / 33%'
              '3-6-3':
                label: '25% / 50% / 25%'
              '3-3-6':
                label: '25% / 25% / 50%'

##
# Adjust the "FourColumn" node type:
# Disable some of the layout options, override labels and set the default layout
#
'TYPO3.Neos.NodeTypes:FourColumn':
